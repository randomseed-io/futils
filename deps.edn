                              spyscope                             {:mvn/version "0.1.6"}
                              fipp                                 {:mvn/version "0.6.12"}
                              cljfmt                               {:mvn/version "0.6.4"}}
                 :extra-paths ["dev/src" "test"]
                 :jvm-opts ["-Xmx1g"
