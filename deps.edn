                               org.clojure/core.match               {:mvn/version  "0.2.2"}}
                  :main-opts ["-m" "futils.hydrox.main"]}

           :dev-nrepl {
                       :jvm-opts ["-Dnrepl.load=true"]
                       :extra-paths ["aliases/nrepl"]
                       :extra-deps {cider/cider-nrepl               {:mvn/version "0.24.0"}
                                    ;;refactor-nrepl                {:mvn/version "2.3.1"}
